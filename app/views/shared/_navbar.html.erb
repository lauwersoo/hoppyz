<% if current_page?(root_path) %>

  <nav role="navigation" id="landing-page">
    <div class="align-right">
      <div id="menuToggle">


        <!--
        A fake / hidden checkbox is used as click reciever,
        so you can use the :checked selector on it.
        -->


        <input type="checkbox" />


        <!--
        Some spans to act as a hamburger.

        They are acting like a real hamburger,
        not that McDonalds stuff.
        -->


        <span></span>
        <span></span>
        <span></span>


        <!--
        Too bad the menu has to be inside of the button
        but hey, it's pure CSS magic.
        -->


        <ul id="menu">
          <a href="#accueil"><li>Accueil</li></a>
          <a href="#particuliers"><li>Particuliers</li></a>
          <a href="#groupes"><li>Groupes</li></a>
          <a href="#brasseurs"><li>Brasseurs</li></a>
          <a href="#restaurateurs"><li>Restaurateurs</li></a>
          <a href="#agenda"><li>Agenda</li></a>
          <a href="#contact"><li>Contact</li></a>
        </ul>
      </div>
    </div>
  </nav>

<% else %>

  <nav role="navigation" id="other-than-root">
    <div class="align-right">
      <div id="menuToggle">


        <!--
        A fake / hidden checkbox is used as click reciever,
        so you can use the :checked selector on it.
        -->


        <input type="checkbox" />


        <!--
        Some spans to act as a hamburger.

        They are acting like a real hamburger,
        not that McDonalds stuff.
        -->


        <span></span>
        <span></span>
        <span></span>


        <!--
        Too bad the menu has to be inside of the button
        but hey, it's pure CSS magic.
        -->


        <ul id="menu-other-than-root">
          <li><%= link_to  "Accueil", root_path %></li>
          <li><%= link_to  "Ateliers", ateliers_path %></li>
          <li><%= link_to  "Formations", formations_path %></li>
        </ul>
      </div>
    </div>
  </nav>

<% end %>
