<h1>Mes formations</h1>

<% if @formations.count == 0 %>
  <p>Il n'y a pas de formations</p>
<% else %>
  <% @formations.each do |f| %>
    <ul>
      <li><p>Titre : <%= f.title %></p></li>
      <p>Prix : <%= f.price %> €</p>
      <p>Description : <%= f.description %></p>
      <p><%= link_to  "supprimer définitivement", formation_path(f), method: :delete %> - Retirer du site</p>

    </ul>
  <% end %>
<% end %>


