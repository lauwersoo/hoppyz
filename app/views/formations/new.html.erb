<p>Connecté en tant que <%= current_user.email %></p>

<h1>Crée une formation ici :</h1>

<div class="form">
  <%= simple_form_for [@user, @formation] do |f| %>
    <%= f.error_notification %>
    <%= f.input :title, label: 'Titre de la formation', error: 'Un titre est obligatoire afin de créer la formation' %>
    <%= f.input :price, label: 'Prix de la formation', error: 'Un prix est obligatoire afin de créer la formation' %>
    <%= f.input :description, label: 'Description de la formation', error: 'Une description est obligatoire afin de créer la formation' %>
    <%= f.button :submit, 'Créer' %>
  <% end %>
</div>

<%= link_to  "cancel", admin_platform_path %>
